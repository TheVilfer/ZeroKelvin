---
layout: main.njk
---

<main class="page__product">
  <section class="product__card">
    <div class="swiper-container product__slider">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="swiper-zoom-container">
            <img class="product__img" src="{{ artwork }}" alt="{{ title }}" />
          </div>
        </div>
        {% for img in images %}
        <div class="swiper-slide">
          <img class="product__img" src="{{ img }}" alt="{{ title }}" />
        </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
    <section class="product__description cart__item" data-id="{{ id }}">
      <img
        class="cart__image"
        src="{{ artwork }}"
        alt=""
        style="display: none"
      />
      <span class="item__category cart__type">{{ category }}</span>
      <h1 class="product__name item__name cart__name">
        {{ title }}
      </h1>
      <img
        class="item__status"
        src="/images/icons/battery-full.svg"
        alt="Полная батарейка"
        data-tippy-content="Много"
      />
      <span class="item__price cart__price">{{ price }} руб.</span>
      {% if isAddToCart %}
      <button class="item__cart cart__add">Добавить в корзину</button>
      {% else %}
      <button class="item__cart item__buy" onclick="BuyPopup()">Купить</button>
      {% endif %}
      <section class="product__details--short">
        {{ content | safe }}
      </section>
    </section>
    {% if features %}
    <section class="product__details">{{ features }}</section>
    {% endif%}
  </section>
  {% if collections[tags[1]] | length > 1 %}
  <section class="swiper-container product__likes">
    <h2>Также из этой категории</h2>
    <div class="swiper-wrapper">
      {% for item in collections[tags[1]] %}
      <div
        class="likes__item cart__item swiper-slide"
        data-id="{{ item.data.id }}"
      >
        <div class="item__link-zone">
          <img
            width="500"
            height="500"
            class="item__image cart__image"
            src="{{ item.data.artwork }}"
            alt="{{ item.data.title }}"
            loading="lazy"
          />

          <span class="item__category cart__type">
            {{ item.data.category }}
          </span>
          <a class="link--block" href="{{ item.url }}"></a>
          <span class="item__name cart__name">
            {{ item.data.title }}
          </span>
          <span class="item__price cart__price">{{ item.data.price }} руб</span>
          <button class="item__favorite icon__favorite favorite__add"></button>
        </div>
        {% if item.data.isAddToCart %}
        <button class="item__cart cart__add">Добавить в корзину</button>
        {% else %}
        <button class="item__cart item__buy">Купить</button>
        {% endif %}
      </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </section>
  {% endif%}
</main>
<script src="https://unpkg.com/@popperjs/core@2"></script>
<script src="https://unpkg.com/tippy.js@6"></script>
<link
  href="https://cdn.jsdelivr.net/npm/@sweetalert2/themes@5.0.2/minimal/minimal.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

<script>
  tippy("[data-tippy-content]");
</script>
<script>
  function BuyPopup() {
    Swal.fire({
      title: "Заявка",
      text: "Данный товар пока нельзя заказать через наш сайт, но вы можете оставить заявку на его покупку, либо найти его у нас в магазине на Wildberries",
      icon: "info",
      showDenyButton: true,
      confirmButtonText: `Оставить заявку`,
      denyButtonText: `Перейти на Wildberries`,
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire({
          title: "Заявка",
          text: "Оставьте ваш контактный номер телефона и наш менеджер обязательно c вами свяжется!",
          input: "tel",
          inputLabel: "Ваш номер телефона",
          inputPlaceholder: "+7xxxxxxxxxx",
          inputValidator: (value) => {
            if (!value || JSON.stringify(value).length - 2 < 12) {
              return "Вы ввели некорректный номер телефона";
            }
          },
          inputAttributes: {
            maxlength: 12,
            autocomplete: "on",
          },
        }).then((rst) => {
          fetch("/.netlify/functions/telegrambot", {
            method: "POST",
            headers: {
              "Content-Type": "application/json;charset=utf-8",
            },
            body: JSON.stringify({ tel: rst.value }),
          });
          Swal.fire({
            title: "Cпасибо за заявку!",
            text: "В течение дня с вами свяжется наш менеджер",
            confirmButtonText: "Готово",
          });
        });
      } else if (result.isDenied) {
        window.open("https://www.wildberries.ru/brands/nol-kelvin", "_blank");
      }
    });
  }
</script>
