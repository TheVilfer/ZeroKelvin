---
title: Оплата
permalink: /order/
layout: main.njk
---

<main class="order__main">
  <header class="order__header">
    <h1>Оплата</h1>
  </header>
  <form class="order__form" autocomplete="on">
    <fieldset class="fieldset fieldset_individual">
      <legend class="order__form__legend">Личные данные</legend>
      <input
        class="input"
        type="text"
        name="given-name"
        id="name"
        autocomplete="given-name"
        required
        placeholder="Имя"
      />
      <input
        class="input"
        type="text"
        name="family-name"
        id="surname"
        autocomplete="family-name"
        required
        placeholder="Фамилия"
      />
      <input
        class="input"
        type="tel"
        name="tel"
        id="phone"
        autocomplete="home tel"
        required
        placeholder="Номер телефона"
      />
      <input
        class="input"
        type="email"
        name="email"
        id="email"
        autocomplete="home email"
        required
        placeholder="Email адрес"
      />
      <input
        class="input"
        type="text"
        name="country"
        id="country"
        autocomplete="shipping country-name"
        required
        placeholder="Страна"
      />
      <input
        class="input"
        type="text"
        name="state"
        id="state"
        autocomplete="shipping address-level1"
        required
        placeholder="Регион/Область"
      />
      <input
        class="input"
        type="text"
        name="city"
        id="city"
        autocomplete="shipping address-level2"
        required
        placeholder="Город/Населённый пункт"
      />
      <input
        class="input"
        type="text"
        name="street"
        id="street"
        autocomplete="shipping address-line1"
        required
        placeholder="Улица, дом"
      />
      <input
        class="input"
        type="number"
        name="housing"
        id="housing"
        autocomplete="shipping address-line3"
        placeholder="Корпус"
      />
      <input
        class="input"
        type="text"
        name="room"
        id="room"
        autocomplete="shipping address-line2"
        placeholder="Квартира"
      />
      <input
        class="input"
        type="number"
        name="postalcode"
        id="postalcode"
        autocomplete="shipping postal-code"
        required
        placeholder="Почтовый индекс"
      />
    </fieldset>
    <fieldset class="fieldset fieldset-detail">
      <legend>Детали</legend>
      <label for="comment">Комментарий к заказу</label>
      <br />
      <textarea
        cols="15"
        rows="1"
        class="fieldset-detail__textarea"
        name="comment"
        id="comment"
      ></textarea>
    </fieldset>
    <button class="order__submit button" type="submit">Оформить заказ</button>
  </form>
</main>
<script defer src="/scripts/imask.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link
  href="https://cdn.jsdelivr.net/npm/suggestions-jquery@21.6.0/dist/css/suggestions.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/suggestions-jquery@21.6.0/dist/js/jquery.suggestions.min.js"></script>
<script>
  var token = "aaa642a9db3cee03cc076805206b20113f71eb93";
  var type = "ADDRESS";
  var $country = $("#country");
  var $region = $("#state");
  var $city = $("#city");
  var $street = $("#street");

  function showPostalCode(suggestion) {
    if (suggestion.data.postal_code)
      $("#postalcode").val(suggestion.data.postal_code);
  }

  function clearPostalCode() {
    $("#postalcode").val("");
  }
  function suggestHouse(suggestion) {
    if (suggestion.data.house) {
      return;
    }
    $street.suggestions().update();
  }
  function combo(suggestion) {
    showPostalCode(suggestion);
    suggestHouse(suggestion);
  }
  $country.suggestions({
    token: token,
    type: type,
    constraints: {
      locations: { country: "*" },
    },
    bounds: "country",
    hint: false,
  });
  $region.suggestions({
    token: token,
    type: type,
    hint: false,
    bounds: "region-area",
    constraints: $country,
  });
  $city.suggestions({
    token: token,
    type: type,
    hint: false,
    bounds: "city",
    constraints: $region,
    onSelect: showPostalCode,
    onSelectNothing: clearPostalCode,
  });
  $street.suggestions({
    token: token,
    type: type,
    hint: false,
    bounds: "street-house",
    constraints: $city,
    onSelect: combo,
    onSelectNothing: clearPostalCode,
  });
</script>
